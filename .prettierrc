{
  "printWidth": 80,
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,

  "overrides": [
    {
      "files": ["*.jsx", "*.tsx"],
      "options": {
        "singleQuote": false,
        "jsxSingleQuote": false
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "singleQuote": false,
        "tabWidth": 4
      }
    }
  ]
}
